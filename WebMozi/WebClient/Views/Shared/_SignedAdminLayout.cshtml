@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User) && ViewBag.FirstWasUser != 1 || ViewBag.IsSignedIn == 1)
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="stylesheet" asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/css/bootstrap.min.css">

        <link asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css">
        <link asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/css/sb-admin.css" rel="stylesheet" type="text/css">


        <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
        <style>
            .navbar {
                position: relative;
                min-height: 50px;
                margin-bottom: 0;
                border: 1px solid transparent;
                border-radius: 0px;
            }
            #wrapper #content-wrapper {
            overflow-x: hidden;
            width: 100%;
            padding-top: 0;
            padding-bottom: 0;
            }
            .container-fluid {
             padding-right: 15px;
             padding-left: 0;
             margin-right: auto;
             margin-left: auto;
            }
            .navbar-nav > li > a {
                padding-top: 0;
                padding-bottom: 0;
                line-height: 0;
            }
            .navbar-expand .navbar-nav .nav-link {
                padding-right: 2rem;
                padding-left: 2rem;
            }
            .sidebar .nav-item .nav-link {
                display: block;
                width: 100%;
                text-align: left;
                padding: 2rem;
                width: 225px;
            }
        </style>
        <title>@ViewBag.Title</title>
    </head>
    <body id="page-top">
                    @RenderBody()
    </body>
</html>
}
else
{
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="stylesheet" asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/css/bootstrap.min.css">

        <link asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link asp-href-include="bootstrap/startbootstrap-sb-admin-gh-pages/css/sb-admin.css" rel="stylesheet" type="text/css">

        <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
        <title>@ViewBag.Title</title>
    </head>
    <body class="bg-dark">
        <div class="container">
            @RenderBody()
        </div>
    </body>
    </html>
}