@model DTO.User

@{ 
    ViewBag.Title = "Log In";
    Layout = "_UserLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3>First please log in or register</h3>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="Login" asp-controller="User" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>        <input asp-for="Name" class="form-inline" required />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input type="password" asp-for="Password" class="form-inline" required />

        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Log In</button>
            <input type="button" class="btn btn-sm btn-warning" value="Register"
                   onclick="location.href='@Url.Action("RegisterUser","User")'" />
        </div>
        <div class="form-group">
            <div class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</body>
</html>

