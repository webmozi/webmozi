@model IEnumerable<DTO.MovieEventHeader>

@{
    ViewBag.Title = "List Movie Events";
    Layout = "_UserLayout";
}

<!DOCTPYE html>

    <html>
    <head>
        <meta name="viewport" content="wirdt=device-width" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="~/css/styles.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <h3>First please choose a movie</h3>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    <th>Director</th>
                    <th>Date Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => m.Movie.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => m.Movie.Director)
                        </td>
                        <td class="text-center">
                            <input type="button" class="btn btn-sm btn-warning" value=@Html.DisplayFor(modellItem =>m.Time.TimeOfDay)
                                   onclick="location.href='@Url.Action("SelectMovieEvent","User", new { id = m.MovieEventId })'" />

                        </td>

                    </tr>

                }
            </tbody>
        </table>
        <div class="text-left">
            <a asp-controller="User" asp-action="Main" class="btn btn-primary">Back</a>
        </div>
    </body>
</html>
