@model WebClient.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "_SignedUserLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="widt=device-width" />
    <title>Create User</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

                <form name="sentMessage" id="contactForm" asp-controller="User" asp-action="RegisterUser" method="post">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Name">Name:</label>
                            <div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <input asp-for="Name" placeholder="Name" class="form-control" required />
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input type="password" asp-for="Password" placeholder="Password" class="form-control" required />
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="TelephoneNumber">Telephone Number:</label>
                            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                            <input type="number" asp-for="TelephoneNumber" placeholder="Telephone Number" class="form-control" required />
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Email"></label>
                            <div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <input asp-for="Email" placeholder="Email Address" class="form-control" required />
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div id="success"></div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit" id="sendMessageButton">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>