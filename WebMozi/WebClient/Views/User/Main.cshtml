@{
    ViewBag.Title = "User Main";
    Layout = "_UserLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3>First please log in or register</h3>
    <div class="panel-heading text-center">
        <a class="btn btn-primary" asp-controller="User"  asp-action="Login">Login</a>
    </div>
    <div class="panel-heading text-center">
        <a class="btn btn-sm btn-warning" asp-controller="User" asp-action="RegisterUser">Register</a>
    </div>
    <div class="text-left">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</body>
</html>