@model DTO.User

@{
    ViewBag.Title = "Create User";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="widt=device-width" />
    <title>Create User</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <form class="p-a-1" asp-controller="User" asp-action="CreateUserOrLogin" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <a class="btn btn-primary" asp-controller="User" asp-action="Login">Login</a>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">

            <label asp-for="TelephoneNumber">Telephone Number:</label>
            <input class="form-control" asp-for="TelephoneNumber" />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">
                Submit
            </button>
        </div>
    </form>
    <div class="text-left">
        <a asp-controller="User" asp-action="ListMovieEvents" class="btn btn-primary">Back</a>
    </div>
</body>
</html>