@model IEnumerable<DTO.Movie>
@{
    ViewBag.Title = "List Movies";
    Layout = "_UserLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="wirdt=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h4>Here is the list of movies</h4>

    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => m.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => m.Director)
                    </td>
                   
                </tr>

            }
        </tbody>
    </table>
    <div class="text-left">
        <a asp-controller="User" asp-action="Main" class="btn btn-info">Back</a>
    </div>
</body>
</html>