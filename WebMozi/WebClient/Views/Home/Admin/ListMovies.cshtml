@model IEnumerable<DTO.Movie>

@{
    ViewBag.Title = "List Movies";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="wirdt=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h4>Here is the list of movies</h4>
       
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Director</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                   
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => m.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => m.Director)
                            </td>
                            <td class="text-center">
                                <input type="button" class="btn btn-sm btn-warning" value="Edit"
                                       onclick="location.href='@Url.Action("AEdit", new { id = m.MovieId })'" />
                                <input type="button" class="btn btn-danger btn-sm" value="Delete"
                                       onclick="location.href='@Url.Action("ADeleteMovie", new { id = m.MovieId })'" />
                            </td>
                        </tr>
                        
                    }
                </tbody>
        </table>
    <div class="text-left">
        <a asp-action="AMain" class="btn btn-primary">Back</a>
    </div>
</body>
</html>