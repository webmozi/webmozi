@model IEnumerable<DTO.Movie>

@{
    ViewBag.Title = "List Movies";
    Layout = "_UserLayout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="wirdt=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
        <h2>Choose a movie on the list</h2>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Director</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>   @Html.DisplayFor(modelItem => m.Title)</td>
                        <td>   @Html.DisplayFor(modelItem => m.Director)</td>
                        <td class="text-center">
                            <form asp-action="Choose" method="post">
                                <a asp-action="UDateSelect" class="btn btn-sm btn-warning"
                                   asp-route-productId="@m.MovieId">
                                    Select a date
                                </a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-left">
        <a asp-action="UMain" class="btn btn-primary">Back</a>
    </div>
</body>
</html>

