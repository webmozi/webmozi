@model WebClient.Models.Movie

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="wirdt=device-width" />
    <title>Movie List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
        <h2>Here is the list of movies</h2>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Director</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in ViewBag.movies)
                {
                    <tr>
                        <td>@m.Title</td>
                        <td>@m.Director</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post">
                                <a asp-action="Edit" class="btn btn-sm btn-warning"
                                   asp-route-productId="@m.MovieId">
                                    Edit
                                </a>
                                <input type="hidden" name="Title" value="@m.MovieId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-left">
        <a asp-action="AddMovie" class="btn btn-primary">Add Movie</a>
    </div>
</body>
</html>