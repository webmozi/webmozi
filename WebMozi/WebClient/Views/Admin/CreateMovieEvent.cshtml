@model DTO.MovieEvent

@{
    ViewBag.Title = "Create Movie Event";
    Layout = "_SignedAdminLayout";
}

<!DOCTPYE html>

    <html>
    <head>
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
            <a class="navbar-brand mr-1" asp-controller="Home" asp-action="Index">User Page</a>

            <ul class="navbar-nav nav">
                <li>
                    <a class="nav-link" asp-controller="Admin" asp-action="ListMovies">Movies</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Admin" asp-action="ListRooms">Rooms</a>
                </li>
                <li>
                    <a class="nav-link active" asp-controller="Admin" asp-action="ListMovieEvents">Movie Events</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">Users and reservations</a>
                </li>
            </ul>
        </nav>
        <div id="wrapper">
            <div id="content-wrapper">
                <div class="container-fluid">
                    <ul class="sidebar navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ListMovieEvents">Event List</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Admin" asp-action="CreateEvent">Create Event</a>
                        </li>
                    </ul>

                    <div class="card mb-3">
                        <div class="card-body">
                            @using (Html.BeginForm("CreateEvent", "Admin", "Home", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.Movie.MovieId, ViewBag.movielist as SelectList, "Please Select Movie", htmlAttributes: new { required = "" })
                                </div>
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.Room.RoomId, ViewBag.roomlist as SelectList, "Please Select Room", htmlAttributes: new { required = "" })
                                </div>

                                <form class="p-a-1" asp-controller="Admin" asp-action="CreateEvent" method="post">
                                    <div class="form-group">
                                        <label asp-for="Time">Time:</label>
                                        <input class="form-inline" asp-for="Time" required />
                                    </div>
                                    <div class="text-left">
                                        <button class="btn btn-primary" type="submit">
                                            Submit Movie Event
                                        </button>
                                    </div>
                                    <br>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>


