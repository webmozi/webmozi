@model DTO.Movie

@{
    ViewBag.Title = "Add Movie";
    Layout = "_SignedAdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="widt=device-width" />
    <title>Add Movie</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <form class="p-a-1" asp-controller="Admin" asp-action="AddMovie" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Title">Movie title:</label>
            <input class="form-inline" asp-for="Title" required/>
        </div>
        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input class="form-inline" asp-for="Director" />
        </div>
        <div class="text-left">
            <button class="btn btn-primary" type="submit">
                Submit Movie
            </button>
        </div>
        <br>
    </form>
    <div class="text-left">
        <a asp-controller="Admin" asp-action="MovieMain" class="btn btn-info">Back</a>
    </div>
</body>
</html>

