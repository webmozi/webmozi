@model DTO.User
@{
    ViewBag.Title = "Edit User";
    Layout = "_SignedAdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="widt=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
        <form asp-controller="Admin" asp-action="EditUser" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-inline" required />
            </div>
            <div class="form-group">
                <label asp-for="TelephoneNumber"></label>
                <input asp-for="TelephoneNumber" type="number" class="form-inline" required>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-inline" required />
            </div>
            <div class="text-left">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-contoller="Admin" asp-action="ListUsers" class="btn btn-secondary">Cancel</a>
            </div>
            <br>
        </form>
    </div>
</body>
</html>
