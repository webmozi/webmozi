@model WebClient.Models.User

@{
    ViewBag.Title = "Admin Sign in";
    Layout = "_SignedAdminLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Login</div>
        <div class="card-body">
            @if (TempData["successfull"] != null)
            {
                <div class="alert alert-success">@TempData["successfull"]</div>
            }
            @if (TempData["incorrect"] != null)
            {
                <div class="alert alert-danger">@TempData["incorrect"]</div>
            }
            <form asp-action="Login" asp-controller="Admin" method="post">
                <div class="form-group">
                    <!---<div class="form-label-group"> ha megy a js-->
                    <label asp-for="Name"></label>
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>        <input asp-for="Name" class="form-control" placeholder="Name" required autofocus="autofocus" />
                    <!---- </div>-->
                </div>
                <div class="form-group">
                    <!----- <div class="form-label-group">-->
                    <label asp-for="Password"></label>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required />
                    <!---</div>-->
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Sign In</button>
                </div>
                <div class="text-left">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-info">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
