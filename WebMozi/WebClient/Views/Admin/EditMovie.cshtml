@model DTO.Movie
@{
    ViewBag.Title = "Edit Movie";
    Layout = "_SignedAdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" asp-controller="Home" asp-action="Index">User Page</a>

        <ul class="navbar-nav nav">
            <li>
                <a class="nav-link active" asp-controller="Admin" asp-action="ListMovies">Movies</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Admin" asp-action="ListRooms">Rooms</a>
            </li>
            <li>
                <a class="nav-link " asp-controller="Admin" asp-action="ListMovieEvents">Movie Events</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">Users and reservations</a>
            </li>
        </ul>
    </nav>
    <div id="wrapper">
        <div id="content-wrapper">
            <div class="container-fluid">
                <ul class="sidebar navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Admin" asp-action="ListMovies">Movie List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="AddMovie">Add Movie</a>
                    </li>
                </ul>
                <div class="card mb-3">
                    <div class="card-body">
                        <form asp-controller="Admin" asp-action="EditMovie" method="post">
                            <input type="hidden" asp-for="MovieId" />
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-inline" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="Director"></label>
                                <input asp-for="Director" class="form-inline">
                            </div>
                            <div class="form-group">
                                <label asp-for="Length">Length (minutes)</label>
                                <input asp-for="Length" class="form-inline" required />
                            </div>
                            <div class="text-left">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a asp-controller="Admin" asp-action="ListMovies" class="btn btn-secondary">Cancel</a>
                            </div>
                            <br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
