@model DTO.Movie
@{
    ViewBag.Title = "Edit Movie";
    Layout = "_SignedAdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="widt=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
       <div class="panel-body">
           <form asp-controller="Admin" asp-action="EditMovie" method="post">
               <input type="hidden" asp-for="MovieId" />
               <div class="form-group">
                   <label asp-for="Title"></label>
                   <input asp-for="Title" class="form-inline" required />
               </div>
               <div class="form-group">
                   <label asp-for="Director"></label>
                   <input asp-for="Director" class="form-inline">
               </div>    <div class="text-left">
                   <button class="btn btn-primary" type="submit">Save</button>
                   <a asp-controller="Admin" asp-action="ListMovies" class="btn btn-secondary">Cancel</a>
               </div>
               <br>
           </form>
       </div>
</body>
</html>
