@model IEnumerable<DTO.Movie>

@{
    ViewBag.Title = "List Movies";
    Layout = "_SignedAdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" asp-controller="Home" asp-action="Index">User Page</a>

        <ul class="navbar-nav nav">
            <li>
                <a class="nav-link active" asp-controller="Admin" asp-action="ListMovies">Movies</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Admin" asp-action="ListRooms">Rooms</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Admin" asp-action="ListMovieEvents">Movie Events</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">Users and reservations</a>
            </li>
        </ul>
    </nav>
    <div id="wrapper">
        <div id="content-wrapper">
            <div class="container-fluid">
                <ul class="sidebar navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Admin" asp-action="ListMovies">Movie List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="AddMovie">Add Movie</a>
                    </li>
                </ul>
                <div class="card mb-3">
                    <div class="card-body">
                        @if (TempData["add"] != null)
                        {
                            <div class="alert alert-success">@TempData["add"]</div>
                        }
                        @if (TempData["delete"] != null)
                        {
                            <div class="alert alert-danger">@TempData["delete"]</div>
                        }
                        @if (TempData["edit"] != null)
                        {
                            <div class="alert alert-warning">@TempData["edit"]</div>
                        }

                        <div class="table-responsive">

                            <table class="table table-bordered" id="dataTable" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Director</th>
                                        <th>Length</th>
                                        <th>Img</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => m.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => m.Director)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => m.Length) minutes
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => m.Img)
                                        </td>
                                        <td class="text-center">
                                            <input type="button" class="btn btn-sm btn-warning" value="Edit"
                                                   onclick="location.href='@Url.Action("EditMovie","Admin", new { id = m.MovieId })'" />
                                            <input type="button" class="btn btn-danger btn-sm" value="Delete"
                                                   onclick="location.href='@Url.Action("DeleteMovie","Admin", new { id = m.MovieId })'" />
                                        </td>
                                    </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>