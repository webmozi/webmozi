@model IEnumerable<DTO.MovieEventHeader>

@{
    ViewBag.Title = "List Movie Events";
    Layout = "_AdminLayout";
}

<!DOCTPYE html>

<html>
    <head>
        <meta name="viewport" content="wirdt=device-width" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="~/css/styles.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <h4>Here is the list of movie events</h4>

        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    <th>Director</th>
                    <th>Date Time</th>
                    <th>Room</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => m.Movie.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => m.Movie.Director)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modellItem => m.Time)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modellItem => m.Room.RoomNumber)
                    </td>
                    <td class="text-center">
                        <input type="button" class="btn btn-danger btn-sm" value="Delete"
                               onclick="location.href='@Url.Action("DeleteMovieEvent","Admin", new { id = m.MovieEventId })'" />
                    </td>
                </tr>

                    }
            </tbody>
        </table>
        <div class="text-left">
            <a asp-controller="Admin" asp-action="Main" class="btn btn-primary">Back</a>
        </div>
    </body>
</html>
